<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/readerRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <!-- Top bar: title + Chapters button -->
    <LinearLayout
        android:id="@+id/readerHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingTop="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/logoImage1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="5dp"
            android:src="@mipmap/ic_launcher"
            android:contentDescription="@string/app_name" />

        <TextView
            android:id="@+id/readerTitle"
            android:layout_width="195dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="DocTell"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Keep same id: used in ReaderActivity -->
        <!-- make to options -->
        <Button
            android:id="@+id/optionsBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/dt_accent"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="@string/btn_options"
            android:textAllCaps="false"
            android:textColor="@android:color/black" />
    </LinearLayout>

    <!-- Page indicator ABOVE the PDF -->
    <TextView
        android:id="@+id/pageIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 / 1"
        android:textColor="@android:color/white"
        android:textSize="19sp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/readerHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- PDF container between page indicator and bottom bar -->
    <FrameLayout
        android:id="@+id/pdfContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/pageIndicator"
        app:layout_constraintBottom_toTopOf="@id/readerBottomBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/pdfImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/black"
            android:adjustViewBounds="true"
            android:scaleType="matrix" />

        <com.doctell.app.view.HighlightOverlayView
            android:id="@+id/highlightOverlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="false"
            android:focusable="false" />

    </FrameLayout>

    <!-- Loading spinner centered over PDF -->
    <ProgressBar
        android:id="@+id/loadingBar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/pdfContainer"
        app:layout_constraintBottom_toBottomOf="@id/pdfContainer"
        app:layout_constraintStart_toStartOf="@id/pdfContainer"
        app:layout_constraintEnd_toEndOf="@id/pdfContainer" />

    <!-- Bottom bar: slim, like main nav -->
    <LinearLayout
        android:id="@+id/readerBottomBar"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:background="@color/black"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:weightSum="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Prev -->
        <Button
            android:id="@+id/btnPrev"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:text="@string/pref_prev"
            android:textAllCaps="false"
            android:textColor="@android:color/white" />

        <!-- Play / Pause -->
        <Button
            android:id="@+id/btnTTS"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/black"
            android:text="@string/pref_play"
            android:textAllCaps="false"
            android:textColor="@android:color/white" />

        <!-- Next -->
        <Button
            android:id="@+id/btnNext"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:text="@string/pref_next"
            android:textAllCaps="false"
            android:textColor="@android:color/white" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
