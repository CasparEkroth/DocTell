<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_marginTop="50dp">

        <!-- Voice -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pref_voice"
            android:textStyle="bold"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/spVoice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="24dp"
            android:spinnerMode="dropdown"
            android:dropDownWidth="match_parent" />

        <!-- Language -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pref_lang_title"
            android:textStyle="bold"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/spLang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="24dp"
            android:spinnerMode="dropdown"
            android:dropDownWidth="match_parent" />

        <!-- Rate -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pref_tts_speed_title"
            android:textStyle="bold"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txtRateValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.0Ã—"
            android:layout_marginTop="8dp" />

        <SeekBar
            android:id="@+id/seekRate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="150"
            android:progress="50"
            android:layout_marginTop="8dp" />

        <!-- Privacy / Data collection -->
        <TextView
            android:id="@+id/txtPrivacy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pref_privacy_title"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="24dp" />

        <Switch
            android:id="@+id/swAnalytics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pref_analytics_enabled"
            android:layout_marginTop="8dp" />

        <Switch
            android:id="@+id/swCrashlytics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pref_crashlytics_enabled"
            android:layout_marginTop="8dp" />


    </LinearLayout>
</ScrollView>
