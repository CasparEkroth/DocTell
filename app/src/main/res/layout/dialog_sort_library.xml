<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp">

    <!-- Dialog title -->
    <TextView
        android:id="@+id/tvSortTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sortera bibliotek"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingBottom="12dp" />

    <!-- Sort options -->
    <RadioGroup
        android:id="@+id/rgSortOptions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Title A–Ö -->
        <RadioButton
            android:id="@+id/rbTitleAZ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Titel (A–Ö)"
            android:checked="true" />

        <!-- Title Ö–A -->
        <RadioButton
            android:id="@+id/rbTitleZA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Titel (Ö–A)" />

        <!-- Date: newest first -->
        <RadioButton
            android:id="@+id/rbDateNewest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Datum (nyast först)" />

        <!-- Date: oldest first -->
        <RadioButton
            android:id="@+id/rbDateOldest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Datum (äldst först)" />

    </RadioGroup>

</LinearLayout>
